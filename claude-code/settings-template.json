{
  "$schema": "https://docs.anthropic.com/en/api/claude-code-settings-schema.json",
  "description": "Delobotomize-enhanced Claude Code settings",

  "hooks": {
    "session_start": ".claude/hooks/session_start.py",
    "post_tool_use": ".claude/hooks/post_tool_use.py",
    "pre_request": ".claude/hooks/pre_request.py",
    "post_response": ".claude/hooks/post_response.py"
  },

  "delobotomize": {
    "enabled": true,
    "monitoring_server_url": "http://localhost:4000",
    "proxy_server_url": "http://localhost:8082",
    "run_artifacts_dir": ".delobotomize/runs",
    "phases": {
      "audit": {
        "enabled": true,
        "scan_file_system": true,
        "parse_proxy_logs": true
      },
      "analysis": {
        "enabled": true,
        "confidence_threshold": 0.6,
        "max_issues": 50
      },
      "recovery": {
        "enabled": true,
        "generate_execution_steps": true
      },
      "fix": {
        "enabled": false,
        "require_approval": true,
        "create_git_commits": true
      },
      "iterate": {
        "enabled": false,
        "max_iterations": 3
      }
    }
  },

  "multi_agent_workflow": {
    "hooks": {
      "server_url": "http://localhost:4000",
      "timeout": 5,
      "enabled": true
    },
    "monitoring": {
      "port": 4000,
      "db_path": ".delobotomize/monitoring.db",
      "log_events": true
    }
  },

  "claude_code_proxy": {
    "enabled": false,
    "port": 8082,
    "log_path": ".delobotomize/proxy.log",
    "upstream_url": "https://api.anthropic.com",
    "rate_limiting": {
      "enabled": true,
      "request_delay_ms": 0,
      "retry_backoff_factor": 2,
      "max_retries": 3
    },
    "reasoning": {
      "budget": 10000,
      "track_overflow": true
    },
    "context": {
      "window": 200000,
      "saturation_threshold": 0.85
    }
  },

  "editor": {
    "default": "code",
    "wait_for_close": false
  },

  "git": {
    "auto_commit": false,
    "commit_message_template": "delobotomize: {description}"
  },

  "logging": {
    "level": "info",
    "file": ".delobotomize/claude-code.log"
  }
}
