{
  "name": "delobotomize",
  "version": "15.0.0",
  "description": "Claude Code recovery pipeline that rescues context-collapsed AI coding sessions",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "delobotomize": "./dist/cli.js",
    "delobotomize-monitor": "./dist/monitor.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts src/monitor.ts --outdir dist --target node",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "postinstall": "node scripts/postinstall.js",
    "validate": "node scripts/validate-vendor.js && node scripts/validate-legal.js",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "claude-code",
    "ai",
    "recovery",
    "monitoring",
    "developer-tools",
    "cli"
  ],
  "author": "Delobotomize Core Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "uuid": "^9.0.1",
    "chokidar": "^3.5.3",
    "better-sqlite3": "^9.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/better-sqlite3": "^7.6.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aaronmiller/delobotomize.git"
  },
  "bugs": {
    "url": "https://github.com/aaronmiller/delobotomize/issues"
  },
  "homepage": "https://github.com/aaronmiller/delobotomize#readme"
}